{
  "name": "sistema-gestion-clinica",
  "version": "1.0.0",
  "description": "Advanced Clinical Management System with AI-powered features",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
