    "socket.io": "^4.7.2",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "moment": "^2.29.4",
    "uuid": "^9.0.0",
    "sharp": "^0.32.5",
    "pdf-parse": "^1.1.1",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
